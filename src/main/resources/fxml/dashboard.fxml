<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="407.0" prefWidth="616.0" spacing="12" styleClass="root dashboard-root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxh2app.controllers.DashboardController">

    <!-- Верхняя панель -->
    <HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="619.0" spacing="20" styleClass="top-bar">
        <Label fx:id="welcomeLabel" prefHeight="17.0" prefWidth="331.0" styleClass="title" text="Привет!" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="logoutBtn" styleClass="btn" text="Выйти" />
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>

    <Label styleClass="subtitle" text="Ближайшие дедлайны:" />
    <ListView fx:id="upcomingList" prefHeight="120" styleClass="list-view" />

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="openTasksBtn" prefHeight="26.0" prefWidth="105.0" styleClass="btn" text="Мои задачи" />
        <Region prefHeight="26.0" prefWidth="163.0" HBox.hgrow="ALWAYS" />
        <Label styleClass="info" text="Подсказка: отметь выполненное в окне задач" />
    </HBox>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
